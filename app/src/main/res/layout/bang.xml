<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/bang_first"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:alpha="0"
        android:background="@drawable/oval3"/>

    <ImageView
        android:id="@+id/bang_second"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_gravity="center"
        android:alpha="0"
        android:background="@drawable/oval_red"/>

    <ImageView
        android:id="@+id/bang_forth"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:alpha="0"
        android:layout_gravity="end"
        android:background="@drawable/oval_orange1"/>

    <ImageView
        android:id="@+id/bang_fifth"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:alpha="0"
        android:layout_gravity="end|bottom"
        android:background="@drawable/oval_yellow"/>
    <ImageView
        android:id="@+id/bang_sixth"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:alpha="0"
        android:layout_gravity="start|bottom"
        android:background="@drawable/oval_yellow1"/>

    <ImageView
        android:id="@+id/bang_third"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="start"
        android:alpha="0"
        android:background="@drawable/oval_orange" />

</FrameLayout>