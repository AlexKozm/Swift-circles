<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="310dp"
    android:background="@drawable/frame_style">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/bang_first"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:alpha="1"
            android:background="@drawable/oval3"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="5dp" />

        <ImageView
            android:id="@+id/bang_forth"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="end"
            android:alpha="1"
            android:background="@drawable/oval_orange1"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="4dp" />

        <ImageView
            android:id="@+id/bang_fifth"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="end|bottom"
            android:alpha="1"
            android:background="@drawable/oval_yellow"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="124dp" />

        <ImageView
            android:id="@+id/bang_sixth"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="start|bottom"
            android:alpha="1"
            android:background="@drawable/oval_yellow1"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="114dp" />

        <ImageView
            android:id="@+id/bang_third"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="start"
            android:alpha="1"
            android:background="@drawable/oval_orange"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="4dp" />

        <ImageView
            android:id="@+id/bang_second"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_gravity="center"
            android:alpha="1"
            android:background="@drawable/oval_red"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="87dp" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>